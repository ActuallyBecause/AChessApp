@page
@model RegisterModell
@{
    ViewData["Title"] = "Register";
}

<div class="text-center">
    <h1 class="display-4">Registrieren</h1>
</div>

<form method="post" asp-page="Register">
    <p> Name </p>
    <input asp-for=Name class="form-control" placeholder="Enter Name" />
    <br />
     <p> Password </p>
    <input asp-for=Password class="form-control" placeholder="Enter Pass" />
    <br />
     <p> Please enter your chosen password again </p>
    <input asp-for=Passagain class="form-control" placeholder="Pass again" />
    <br />
    <br />
    <button type="Submit" asp-page-handler="Register" class="btn btn-primary"> Create Account </button>
    </form>
    <br />
    <br />
    <form>  
    <label> @Model.DisplayError </label><br>
    </form>

  



